source 'https://rubygems.org'

# our trusty framework
gem 'sinatra'
# manages our gems
gem 'bundler'
# keeps track of our environment variables
gem 'dotenv'
# lets us interact with twitter's API more easily
gem 'twitter'
# provides oauth for ruby
gem 'oauth'
# ruby library to access flickr API
gem 'flickraw'

group :test, :development do
  # reloads the server when changes are made
  gem 'rerun'
  # An IRB alternative and runtime developer console
  gem 'pry'
end
